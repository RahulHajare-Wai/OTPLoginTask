<?xml version="1.0" encoding="utf-8" ?>
<popup:PopupPage  xmlns:popup="http://rotorgames.com" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
                  x:Class="OTPLoginTask.Views.Popup.PopUp">
    <Frame BackgroundColor="White" HorizontalOptions="Center" xct:ShadowEffect.Color="Black"
           CornerRadius="10" xct:ShadowEffect.OffsetY="2" Margin="10"
        VerticalOptions="Center" Padding="0" HeightRequest="200" WidthRequest="360">
        <StackLayout Margin="0,20,0,0" Padding="0" Orientation="Vertical">
            <StackLayout HorizontalOptions="Center">
                <ImageButton Source="XamarinLogo.png" BackgroundColor="#0095C5" HeightRequest="50" WidthRequest="50" HorizontalOptions="Center" Margin="0,10,0,0"
                             CornerRadius="8"/>
                <StackLayout VerticalOptions="CenterAndExpand" Margin="0,25,0,0">
                    <Label x:Name="MessageEntry" VerticalOptions="Center" FontSize="18" TextColor="black"
                           FontAttributes="bold"/>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </Frame>
</popup:PopupPage>